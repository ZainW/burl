{
  "name": "burl-monorepo",
  "version": "0.0.4",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd packages/cli dev",
    "build": "bun run --cwd packages/cli build",
    "build:all": "bun run --cwd packages/cli build:all",
    "test": "bun run --cwd packages/cli test",
    "typecheck": "bun run --cwd packages/cli typecheck",
    "lint": "bun run --cwd packages/cli lint",
    "lint:fix": "bun run --cwd packages/cli lint:fix",
    "format": "oxfmt --write . '!packages/docs/content/**'",
    "format:check": "oxfmt --check . '!packages/docs/content/**'",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "ci": "bun run check && bun test",
    "docs:dev": "bun run --cwd packages/docs dev",
    "docs:build": "bun run --cwd packages/docs build",
    "docs:generate": "bun run --cwd packages/docs generate",
    "docs:preview": "bun run --cwd packages/docs preview"
  },
  "devDependencies": {
    "oxfmt": "^0.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.5"
  },
  "changelogen": {
    "output": "CHANGELOG.md",
    "types": {
      "feat": {
        "title": "ğŸš€ Features"
      },
      "fix": {
        "title": "ğŸ› Bug Fixes"
      },
      "perf": {
        "title": "âš¡ Performance"
      },
      "refactor": {
        "title": "â™»ï¸ Refactors"
      },
      "docs": {
        "title": "ğŸ“– Documentation"
      },
      "chore": {
        "title": "ğŸ¡ Chore"
      },
      "test": {
        "title": "âœ… Tests"
      }
    }
  }
}
